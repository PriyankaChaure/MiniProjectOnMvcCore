@model IEnumerable<mvc_core_mini_project.Models.Sales>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/UserArea/Views/Shared/_ProjectLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.CustomerName)
            </th>
            <th>Amount</th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.SalesId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesDate)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>

            <td>@(@item.Price * item.Qty)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SalesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
